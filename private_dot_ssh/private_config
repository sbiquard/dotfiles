# Read more about SSH config files: https://linux.die.net/man/5/ssh_config

Host souk
  HostName universe.souk.ac.uk
  AddressFamily inet
  User sbiquard
  AddKeysToAgent yes
  ForwardAgent yes
  ServerAliveInterval 600
  SetEnv TERM=xterm-256color

Host perlmutter nersc
  HostName perlmutter.nersc.gov

Host perlmutter*.nersc.gov dtn*.nersc.gov *.nersc.gov
  User sbiquard
  LogLevel QUIET
  IdentityFile ~/.ssh/nersc
  IdentitiesOnly yes
  ForwardAgent yes
  SetEnv TERM=xterm-256color

# perlmutter compute nodes
Host nid??????
  User sbiquard
  LogLevel QUIET
  IdentityFile ~/.ssh/nersc
  StrictHostKeyChecking no
  ProxyJump perlmutter.nersc.gov
  Hostname %h
  SetEnv TERM=xterm-256color

Host dante
  HostName apcdante.in2p3.fr
  User biquard
  ProxyJump apcssh
  SetEnv TERM=xterm-256color

Host apcssh
  HostName apcssh.in2p3.fr
  User biquard
  SetEnv TERM=xterm-256color

Host jean-zay jz
  Hostname jean-zay.idris.fr
  User usl22vm
  ProxyJump apcssh
  SetEnv TERM=xterm-256color

Host nobel
  Hostname %h.princeton.edu
  User sb1860

Host simons1
  Hostname %h.princeton.edu
  User sbiquard
  ProxyJump nobel
  ControlPath ~/.ssh/control-%r@%h:%p
  ControlMaster auto
  ControlPersist 10m
