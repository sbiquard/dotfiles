// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "base_keymap": "VSCode",

  // Themes
  "theme": {
    "mode": "system",
    "dark": "Catppuccin Frapp√© - No Italics",
    "light": "Catppuccin Latte - No Italics"
  },
  "icon_theme": "Material Icon Theme",

  // Fonts
  "ui_font_family": ".SystemUIFont",
  "ui_font_size": 15,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 15,
  "buffer_font_weight": 300,
  "buffer_line_height": "standard",
  "agent_buffer_font_size": 15,
  "agent_ui_font_size": 15,

  // Control which items are shown/hidden in the title bar
  "title_bar": {
    "show_branch_icon": true,
    "show_sign_in": false
  },

  // Other UI settings
  "scrollbar": { "cursors": false },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },

  // Project panel
  "project_panel": { "entry_spacing": "standard" },

  // Minimap
  "minimap": {
    "show": "auto"
  },

  // Copilot settings
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.5-sonnet"
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // Terminal settings
  "terminal": {
    "line_height": "standard",
    "env": {
      "TERM": "xterm-256color",
      "EDITOR": "zed --wait" // use zed as the editor
    },
    "shell": { "program": "fish" },
    "detect_venv": {
      "on": { "activate_script": "fish" }
    }
  },

  // Editor settings
  "format_on_save": "off",

  // Syntax highlighting
  "file_types": {
    "Markdown": ["qmd"] // recognize quarto files as markdown
  },

  // Python settings
  "languages": {
    "Python": {
      "language_servers": [
        // Disable basedpyright and enable Ty, and otherwise
        // use the default configuration (includes Ruff).
        "ty",
        "!basedpyright",
        "..."
      ],
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        { "code_action": "source.fixAll.ruff" },
        { "language_server": { "name": "ruff" } }
      ]
    }
  },

  // LSP settings
  "lsp": {
    "ty": {
      "settings": {
        "experimental": {
          "rename": true
        }
      }
    },
    "basedpyright": {
      "settings": {
        "basedpyright": {
          "disableOrganizeImports": true
        },
        "basedpyright.analysis": {
          "autoSearchPaths": true,
          "typeCheckingMode": "basic",
          "diagnosticMode": "openFilesOnly"
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true
          }
        }
      }
    }
  },

  // Disable telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
