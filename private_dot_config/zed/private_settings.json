// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // UI settings
  "base_keymap": "VSCode",
  "theme": {
    "mode": "system",
    "dark": "One Dark",
    "light": "Catppuccin Latte"
  },
  "ui_font_family": "Ubuntu Sans",
  "ui_font_size": 14,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 15,
  "buffer_font_weight": 300,
  "format_on_save": "off",

  // Terminal settings
  "terminal": {
    "font_family": "JetBrains Mono",
    "font_size": 14,
    "font_weight": 300,
    "env": { "TERM": "xterm-256color" },
    "shell": { "program": "fish" },
    "detect_venv": {
      "on": { "activate_script": "fish" }
    }
  },

  "file_types": {
    "CMake": ["CMakeLists.txt"], // this should not be necessary
    "Markdown": ["qmd"] // recognize quarto files as markdown
  },

  // Python settings
  "languages": {
    "Python": {
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["!pylsp", "!pyright", "basedpyright", "ruff"]
    }
  },

  // LSP settings
  "lsp": {
    "basedpyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        },
        "basedpyright": {
          "disableOrganizeImports": true
        },
        "basedpyright.analysis": {
          "autoSearchPaths": true,
          "typeCheckingMode": "basic",
          "diagnosticMode": "openFilesOnly"
        }
      }
    },
    "pylsp": {
      "settings": {
        "plugins": {
          // Only enable mypy, ruff takes care of the rest
          "pylsp_mypy": {
            "enabled": true
          },
          "pycodestyle": {
            "enabled": false
          },
          "pyflakes": {
            "enabled": false
          }
        }
      }
    }
  },

  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  }
}
