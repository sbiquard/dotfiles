// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "base_keymap": "VSCode",

  // Themes
  "theme": {
    "mode": "system",
    "dark": "Catppuccin Frapp√© - No Italics",
    "light": "Catppuccin Latte"
  },
  "icon_theme": {
    "mode": "system",
    "dark": "Colored Zed Icons Theme Dark",
    "light": "Colored Zed Icons Theme Light"
  },

  // Fonts
  "ui_font_family": "Cantarell",
  "ui_font_size": 15,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 15.0,
  "buffer_line_height": "standard",

  // Other UI settings
  "scrollbar": { "cursors": false },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },

  // Project panel
  "project_panel": { "entry_spacing": "standard" },

  // Copilot settings
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // Terminal settings
  "terminal": {
    "line_height": "standard",
    "env": {
      "TERM": "xterm-256color",
      "EDITOR": "zed --wait" // use zed as the editor
    },
    "shell": { "program": "fish" },
    "detect_venv": {
      "on": { "activate_script": "fish" }
    }
  },

  // Editor settings
  "format_on_save": "off",

  // Syntax highlighting
  "file_types": {
    "CMake": ["CMakeLists.txt"], // this should not be necessary
    "Markdown": ["qmd"], // recognize quarto files as markdown
    "Shell Script": ["slurm"]
  },

  // Language settings
  "languages": {
    "Python": {
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["!pylsp", "!pyright", "basedpyright", "ruff"]
    }
  },

  // LSP settings
  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright": {
          "disableOrganizeImports": true
        },
        "basedpyright.analysis": {
          "autoSearchPaths": true,
          "typeCheckingMode": "basic",
          "diagnosticMode": "openFilesOnly"
        }
      }
    },
    "pylsp": {
      "settings": {
        "plugins": {
          // Only enable mypy, ruff takes care of the rest
          "pylsp_mypy": {
            "enabled": true
          },
          "pycodestyle": {
            "enabled": false
          },
          "pyflakes": {
            "enabled": false
          }
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "onSave": true
          }
        }
      }
    }
  },

  // Disable telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
